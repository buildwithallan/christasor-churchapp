<div class="mt-5">
    <%= link_to "Add Branch", new_branch_path, class: 'bg-blue-500 p-2 text-white hover:bg-blue-600' %>
</div>



<%= search_form_for @q do |f| %>
<div class="flex float-right">
  <%= f.search_field :country_or_district_or_location_or_branchname_or_leaders_name_cont, class: 'focus:outline-none focus:ring-1 focus:ring-gray-400 p-1 w-60 rounded-l',  placeholder: 'Search...' %>
   <%= button_tag(type: "Search", class: "border  bg-white rounded-r hover:border-gray-700") do %>
 <svg class="w-6 h-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
  <% end %>
<% end %>
</div>

<div class="inline-block min-w-full shadow rounded-lg overflow-hidden mt-5 border-t-2 border-gray-500">
	<table class="w-full bg-white">
	<thead>
		<tr class="border-b-2 border-gray-200">
			<th class="text-left px-3 py-2">Id</th>
			<th class="text-left px-3 py-2">Country</th>
			<th class="text-left px-3 py-2">District</th>
			<th class="text-left px-3 py-2">Location</th>
			<th class="text-left px-3 py-2">Branch Name</th>
			<th class="text-left px-3 py-2">Leader's Name</th>
			<th class="text-left px-3 py-2">Contact</th>
		</tr>
	</thead>
	<tbody>
	  <% @branches.each do |branch| %>
		<tr class="border-b border-gray-200 hover:bg-gray-100">
			<td class="px-3 py-1"><%= branch.id %></td>
			<td class="px-3 py-1"><%= branch.country %></td>
			<td class="px-3 py-1"><%= branch.district %></td>
			<td class="px-3 py-1"><%= branch.location %></td>
			<td class="px-3 py-1"><%= branch.branchname %></td>
			<td class="px-3 py-1"><%= branch.leaders_name %></td>
			<td class="px-3 py-1"><%= branch.contact1 %> | <%= branch.contact2 %> | <%= branch.contact3 %></td>
		</tr>
	</tbody>
	<% end %>
  </table>
</div>

<%= pagy_nav(@pagy).html_safe %>

