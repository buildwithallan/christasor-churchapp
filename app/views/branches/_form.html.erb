<h1 class="font-bold">Branch</h1>
<p class="text-sm">Branch > Add New Branch</p> 

<div class="mt-8">   
  <form class="bg-white px-4 max-w-lg rounded-t p-5 border-t-2 border-blue-500 mx-auto">
    <div>
      <%= form_for @branch do |f| %>
        <div>
         <%= f.label :country %>
         <%= f.text_field :country, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
        </div>
        <div>
            <%= f.label :district %>
            <%= f.text_field :district, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
        </div>
        <div>
            <%= f.label :location %>
            <%= f.text_field :location, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
        </div>
        <div>
            <%= f.label :branch_name %>
            <%= f.text_field :branchname, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
        </div>
        <div>
            <%= f.label :leaders_name %>
            <%= f.text_field :leaders_name, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
        </div>
        <div>
            <%= f.label :contact1 %>
            <%= f.telephone_field :contact1, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
        </div>
        <div>
            <%= f.label :contact2 %>
            <%= f.telephone_field :contact2, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
        </div>
        <div>
            <%= f.label :contact3 %>
            <%= f.telephone_field :contact3, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
        </div>
        <div>
            <%= f.submit "Create a branch", class: "bg-transparent hover:bg-blue-500 text-blue-500 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </form>
</div>
