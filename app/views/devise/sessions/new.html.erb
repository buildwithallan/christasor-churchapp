<h1 class="mt-10 text-center">Churchapp</h1>

<div class="bg-white w-1/3 mx-auto pb-10">
  <h2 class="mt-5 text-center p-2">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field px-6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border border-gray-300 block w-full px-2 py-1 focus:outline-none focus:border-blue-200 mb-2' %>
  </div>

  <div class="field px-6">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'border border-gray-300 block w-full px-2 py-1 focus:outline-none focus:border-blue-200 mb-5' %>
  </div>

  <div class="flex px-6 pt-2 space-x-20">

    <div class="actions">
      <%= f.submit "Log in", class: 'bg-blue-500 text-white hover:bg-blue-700 px-2 py-1 cursor-pointer' %>
    </div>
    

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-sm text-end justify-end mt-2' %><br />
    <% end %>
  </div>
  
   <% end %>
</div>
