<% if flash[:notice] %>
<div class="max-w-lg mx-auto px-4 py-3 leading-normal text-center text-blue-700 bg-blue-100 rounded-lg" role="alert">
  <%= flash[:notice] %>
</div>
<% end %>

<% if flash[:alert] %>
<div class="max-w-lg mx-auto px-4 py-3 leading-normal text-center text-red-700 bg-red-100 rounded-lg" role="alert">
  <%= flash[:alert] %>
</div>
<% end %>
