<div class="grid grid-cols-3 ">
	<div class="bg-white w-60 h-60 rounded-t p-3 border-t-2 border-blue-500">
		<div class="flex justify-center">
		  
		   <%= image_tag(@membership.image, :class => 'h-24 w-24 rounded-full mb-3 p-1 border border-2') if @membership.image.attached?  %>
		</div>
		<div class="text-center">
			<h3 class="text-sm bold mb-2"><%= @membership.firstname %> <%= @membership.lastname %> <%= @membership.othernames %></h3>
		</div>
		<div class="flex justify-center">
			<button class="bg-blue-200 text-center text-white px-2"><%= @membership.position %></button>
		</div>
		<div class="flex mt-2 space-x-2 justify-center">
			<svg class="w-4 h-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
			<span><%= @membership.primary_phone_number %></span>
		</div>	
	</div>

	<div class="col-span-2">
		<div class="bg-white w-full rounded-t">
		 <div class="container mx-auto p-2 mb-4" x-data="{ tab: 'tab1' }">
        <ul class="flex border-b mt-2" >
            <li class="-mb-px mr-1">
                <a
                    class="inline-block rounded-t py-2 px-4 font-semibold hover:text-blue-800"  
                    :class="{ 'bg-white text-blue-700 border-l border-t border-r' : tab === 'tab1' }"
                    href="#"                        
                    @click.prevent="tab = 'tab1'"
                >Basic Info</a>
            </li>
            <li class="-mb-px mr-1">
                <a
                    class="inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold"
                    :class="{ 'bg-white text-blue-700 border-l border-t border-r' : tab === 'tab2' }"
                    href="#"
                    @click.prevent="tab = 'tab2'"
                >Church</a
                >
            </li>
            <li class="-mb-px mr-1">
                <a
                    class="inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold"
                    :class="{ 'bg-white text-blue-700 border-l border-t border-r' : tab === 'tab3' }"
                    href="#" 
                    @click.prevent="tab = 'tab3'"
                >Work</a
                >
            </li>
        </ul>
        <div class="content bg-white px-4 py-4 border-l border-r border-b pt-4">
            <div x-show="tab === 'tab1'">
            	<h2>Member Basic Info</h2>
            	<table class="border w-full mt-2">
            		
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Membership ID</td>
            				<td class="p-1"><%= @membership.member_id %></td>
            			</tr>
                        <tr class="border">
                            <td class="border bg-gray-100 p-1">Title</td>
                            <td class="p-1"><%= @membership.title %></td>
                        </tr>
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Gender</td>
            				<td class="p-1"><%= @membership.gender %></td>
            			</tr>
                        <tr class="border">
                            <td class="border bg-gray-100 p-1">Marital Status</td>
                            <td class="p-1"><%= @membership.marital_status %></td>
                        </tr>
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">D.O.B</td>
            				<td class="p-1"><%= @membership.date_of_birth %></td>
            			</tr>
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Email</td>
            				<td class="p-1"><%= @membership.email %></td>
            			</tr>
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Other Phone number</td>
            				<td class="p-1"><%= @membership.other_phone_number %></td>
            			</tr>
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Place of residence</td>
            				<td class="p-1"><%= @membership.residential_location %></td>
            			</tr>
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Hometown</td>
            				<td class="p-1"><%= @membership.hometown %></td>
            			</tr>
            	</table>
            </div>
            <div x-show="tab === 'tab2'">
               <h2>Church</h2>
            	<table class="border w-full mt-2">        		
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Year Joining Church</td>
            				<td class="p-1"><%= @membership.year_joining_church %></td>
            			</tr>
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Tithe</td>
            				<td class="p-1">Tithe</td>
            			</tr>
            	</table>
            </div>                
            <div x-show="tab === 'tab3'">
               <h2>Work</h2>
            	<table class="border w-full mt-2">        		
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Place of work</td>
            				<td class="p-1"><%= @membership.work_place %></td>
            			</tr>
            			<tr class="border">
            				<td class="border bg-gray-100 p-1">Occupation</td>
            				<td class="p-1"><%= @membership.occupation %></td>
            			</tr>
            	</table>
            </div>       
        </div>
       </div>
	 </div>
	</div>
</div>