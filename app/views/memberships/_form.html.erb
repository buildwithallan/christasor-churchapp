<h1 class="font-bold">Membership</h1>
<p class="text-sm">Membership > Add Member</p>

<div class="mt-8">
	<%= form_with model: @membership,local: true do |f| %>
        <% if @membership.errors.any? %>
         <div class="max-w-lg mx-auto px-4 py-3 leading-normal text-red-700 bg-red-100 rounded-lg" role="alert">
          <% @membership.errors.full_messages.each do |message|%>
            <div class="text-center"><%= message %></div>
         <% end %>
         </div>
    <% end %>

    <div class="bg-white px-4 max-w-lg rounded-t p-5 border-t-2 border-blue-500 mx-auto mt-3">

		<div>
		   <%= f.label :image %>
		   <%= f.file_field :image, class: 'block focus:outline-none mb-2' %>	
		</div>

		<div>
		   <%= f.label :member_Id %>
		   <%= f.text_field :member_id, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>	
		</div>

		<div>
		   <%= f.label :title %>
		   <%= f.select :title, options_for_select(['Mr.', 'Mrs.', 'Ms.'], selected: @membership.title), {:include_blank => ''}, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2'  %>
		</div>

		<div> 
		   <%= f.label :firstname %>
		   <%= f.text_field :firstname, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
		</div>

		<div>
		   <%= f.label :lastname %>
		   <%= f.text_field :lastname, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
		</div>

		<div> 
		   <%= f.label :othernames %>
		   <%= f.text_field :othernames, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>	
		</div>

		<div>  
		   <%= f.label :gender %>
		   <%= f.select :gender, options_for_select(['Male', 'Female'], selected: @membership.gender), {:include_blank => ''}, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
		</div>

		<div>
		   <%= f.label :date_of_birth %>
		   <%= f.date_field :date_of_birth, selected: @membership.date_of_birth, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
		</div>

		<div>	
		   <%= f.label :primary_phone_number %>
		   <%= f.telephone_field :primary_phone_number, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
		</div>

		<div>
		   <%= f.label :other_phone_number %>
		   <%= f.telephone_field :other_phone_number, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>	
		</div>

		<div>
		   <%= f.label :email %>
		   <%= f.email_field :email, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>	
		</div>

		<div>
		   <%= f.label :hometown %>
		   <%= f.text_field :hometown, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
		</div>

		<div>
		   <%= f.label :residential_location %>
		   <%= f.text_area :residential_location, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>	
		</div>

		<div>
		   <%= f.label :occupation %>
		   <%= f.text_field :occupation, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>	
		</div>

		<div>
		   <%= f.label :marital_status %>
		   <%= f.select :marital_status, options_for_select(['Single', 'Married'], selected: @membership.marital_status), {:include_blank => ''}, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>	
		</div>

		<div>
		   <%= f.label :place_of_work %>
		   <%= f.text_field :work_place, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>	
		</div>

		<div>
		   <%= f.label :Member_position %>
		   <%= f.text_field :position, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
		</div>

		<div>
		   <%= f.label :year_joining_church %>
		   <%= f.text_field :year_joining_church, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-4' %>	
		</div>
		
		<div>
		   <%= f.submit "Create Member", class: "bg-transparent hover:bg-blue-500 text-blue-500 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded cursor-pointer" %>	
		</div>
      <% end %>
    </div>
</div>

