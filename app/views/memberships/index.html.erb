<div class="mt-5">
    <%= link_to "Add Membership", new_membership_path, class: 'bg-blue-500 p-2 text-white hover:bg-blue-600' %>
</div>

<%= search_form_for @q do |f| %>
	<div class="flex float-right mb-2 mt-3">
      <%= f.search_field :firstname_or_lastname_or_member_id_or_position_cont, class: 'focus:outline-none focus:ring-1 focus:ring-gray-400 p-1 w-60 rounded-l',  placeholder: 'Search...' %>
  
       <%= button_tag(type: "Search", class: "border  bg-white rounded-r hover:border-gray-700") do %>
       <svg class="w-6 h-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
       <% end %>
<% end %>
    </div>


<div class="w-full shadow rounded-lg overflow-auto mt-5 border-t-2 border-gray-500">
	<table class="w-full bg-white">
	<thead>
		<tr class="border-b-2 border-gray-200">
			<th class="text-left px-3 py-2">Id</th>
			<th class="text-left px-4 py-2">Pic</th>
			<th class="text-left px-3 py-2">Name</th>
			<th class="text-left px-3 py-2">Membership No.</th>
			<th class="text-left px-3 py-2">Position</th>
			<th class="text-left px-3 py-2">Phone No.</th>
			<th class="text-left px-3 py-2" colspan="3">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @memberships.each do |membership| %>
		<tr class="border-b border-gray-200 hover:bg-gray-100">
			<td class="px-3"><%= membership.id %></td>
			<td class="px-3"><%= image_tag(membership.image, :size => '50x50') if membership.image.attached? %></td>
			<td class="px-3"><%= membership.firstname %> <%= membership.lastname %> <%= membership.othernames %></td>
			<td class="px-3"><%= membership.member_id %></td>
			<td class="px-3"><%= membership.position %></td>
			<td class="px-3"><%= membership.primary_phone_number %></td>
			<td class="flex px-3 mt-2"><%= link_to membership_path(membership.slug) do %>
				<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
				<% end %>
			
			   <%= link_to edit_membership_path(membership.slug) do %>
				<svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
				<% end %>
			
			   <%= button_to membership_path(membership.id), method: :delete, data: {confirm: "Are you sure you want to delete?"} do %>
				 <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

</div>
	
<div class="mt-2">
<%= pagy_nav(@pagy).html_safe %>
</div>

  
  
  
  
