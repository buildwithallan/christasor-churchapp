
<%= search_form_for @q do |f| %>
  <%= f.search_field :firstname_or_lastname_or_member_id_or_position_cont%>
  <%= f.submit %>
<% end %>


<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>Pic</th>
			<th>Name</th>
			<th>Membership No.</th>
			<th>Position</th>
			<th>Phone number</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @memberships.each do |membership| %>
		<tr>
			<td><%= membership.id %></td>
			<td><%= image_tag(membership.image, :size => '60x60') if membership.image.attached? %></td>
			<td><%= membership.firstname %> <%= membership.lastname %> <%= membership.othernames %></td>
			<td><%= membership.member_id %></td>
			<td><%= membership.position %></td>
			<td><%= membership.primary_phone_number %></td>
			<td><%= link_to "Show", membership_path(membership.id) %></td>
			<td><%= link_to "Edit", edit_membership_path(membership.id)%></td>
			<td><%= link_to "Delete", membership_path(membership.id), method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>


  
  
  
  
