<div class="mt-5">
    <%= link_to "Add Department", new_department_path, class: 'bg-blue-500 p-2 text-white hover:bg-blue-600 ml-40' %>
</div>


<div class="max-w-lg shadow rounded-lg overflow-hidden mt-5 border-t-2 border-gray-500 mx-auto">
  <table class="w-full bg-white">
	<thead>
		<tr class="border-b-2 border-gray-200">
			<th class="text-left px-3 py-2">id</th>
			<th class="text-left px-3 py-2">Department</th>
			<th class="text-left px-3 py-2" colspan="2">Action</th>
		</tr>
	</thead>
	<tbody>
	  <% @departments.each do |department| %>
		<tr class="border-b border-gray-200 hover:bg-gray-100">
			<td class="px-3 py-1"><%= department.id %></td>
			<td class="px-3 py-1"><%= department.name %></td>
			<td class="flex px-3"><%= link_to edit_department_path(department.id) do %>
				<svg class="ml-15 w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
				<% end %>
			
			    <%= button_to department_path(department.id), method: :delete, data: {confirm: "Are you sure you want to delete?"} do %>
				 <svg class="mr-8 w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
				<% end %>
			</td>
		</tr>
	</tbody>
	<% end %>
</table>	
</div>

<div class="mt-2 ml-40">
	<%= pagy_nav(@pagy).html_safe %>
</div>



