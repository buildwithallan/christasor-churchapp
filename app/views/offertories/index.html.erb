<div class="mt-5 mb-8">
    <%= link_to "Add Offertory", new_offertory_path, class: 'bg-blue-500 p-2 text-white hover:bg-blue-600' %>
</div>


<%= search_form_for @q do |f| %>
<div class="space-y-2">
  <%= f.search_field :description_cont, class: 'focus:outline-none focus:ring-1 focus:ring-gray-400 p-1 w-60 rounded'  %>
  <%= f.date_field :offertory_date_gteq, class: 'focus:outline-none focus:ring-1 focus:ring-gray-400 p-1 w-60 rounded'  %>
  <%= f.date_field :offertory_date_lteq, class: 'focus:outline-none focus:ring-1 focus:ring-gray-400 p-1 w-60 rounded'  %>
  <%= button_tag(type: "Search", class: "border  bg-blue-400 text-white p-1 rounded hover:border-gray-700") do %>
   		Search
   <% end %>
<% end %>
</div>

<div class="w-full shadow rounded-lg overflow-auto mt-5 border-t-2 border-gray-500">	
<table class="w-full bg-white">
	<thead>
		<tr class="border-b-2 border-gray-200">
		   <th class="text-left px-3 py-2">Id</th>
		   <th class="text-left px-3 py-2">Description</th>
		   <th class="text-left px-3 py-2">Amount</th>
		   <th class="text-left px-3 py-2">Date</th>
		</tr>
	</thead>
	<tbody>
		<% @offertories.each do |offertory| %>
		  <tr class="border-b border-gray-200 hover:bg-gray-100">
		  	<td class="px-3 py-1"><%= offertory.id %></td>
			<td class="px-3 py-1"><%= offertory.description %></td>
			<td class="px-3 py-1">GHc <%= offertory.amount %></td>
			<td class="px-3 py-1"><%= offertory.offertory_date.strftime('%A, %d %b %Y')%></td>
		  </tr>
		<% end %>
	</tbody>

	<% if @offertories.exists? %>
	<tfoot>
		<tr>
			<th></th>
			<th>Total = </th>
			<th class="text-left px-3 py-2">GHc <%= @offertories.sum(:amount) %></th>
		</tr>
	</tfoot>
	<% end %>
</table>
</div>

<div class="mt-2">
<%= pagy_nav(@pagy).html_safe %>
</div>





