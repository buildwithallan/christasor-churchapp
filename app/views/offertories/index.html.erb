<%= search_form_for @q do |f| %>
  <%= f.search_field :description_cont %>
  <%= f.date_field :created_at_gteq %>
  <%= f.date_field :created_at_lteq %>
  <%= f.submit %>
<% end %>


<table>
	<thead>
		<tr>
		   <th>Id</th>
		   <th>Description</th>
		   <th>Amount</th>
		   <th>Date</th>
		</tr>
	</thead>
	<tbody>
		<% @offertories.each do |offertory| %>
		  <tr>
		  	<td><%= offertory.id %></td>
			<td><%= offertory.description %></td>
			<td>GHc <%= offertory.amount %></td>
			<td><%= offertory.created_at.strftime('%A, %d %b %Y %l:%M %p')%></td>
		  </tr>
		<% end %>
	</tbody>
	<tfoot>
		<tr>
			<th></th>
			<th>Total = </th>
			<th>GHc <%= @offertories.sum(:amount) %></th>

		</tr>
	</tfoot>
</table>



