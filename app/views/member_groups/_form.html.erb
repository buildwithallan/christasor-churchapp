<h1 class="font-bold">Member Group</h1>
<p class="text-sm">Member Group > Add Member Group</p>

<div class="mt-8">	
	<div class="bg-white px-4 max-w-lg rounded-t p-5 border-t-2 border-blue-500 mx-auto">
	  <%= form_for @member_group do |f| %>
		<div>
		   <%= f.label :fullname %>
	       <%= f.text_field :fullname, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2' %>
		</div>

		<div>		
	       <%= f.label :Group %>
	       <%= f.select :group_id, options_for_select(Group.all.map{|c| [c.group_name, c.id]}), {:include_blank => '--Select One--'}, class: 'border border-gray-300 block w-full rounded px-2 py-1 focus:outline-none focus:border-blue-100 mb-2'  %>
		</div>

		<div>
			<%= f.submit "Create", class: "bg-transparent hover:bg-blue-500 text-blue-500 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded cursor-pointer" %>
		</div>	
      <% end %>
	</div>	
</div> 

