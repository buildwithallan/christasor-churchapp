<% if Current.user %>
 <aside class="max-w-lg bg-white w-80 border-r min-h-screen border-r border-gray-200">
         <h1 class="w-full p-3 border-b border-gray-100 uppercase font-bold text-center text-blue-700">
           <a href="" class="pt-5">christ-Asor</a>
         </h1>
          <ul>
            <li class="text-gray-500 hover:text-blue-700">
              <span class="flex p-2 border-r-4 hover:border-blue-500 hover:bg-gray-100">        
                  <svg class="w-5 5-6 ml-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
                       <%= link_to "Dashboard", dashboard_index_path, class: 'ml-5' %>
                    </span>                   
            </li>

            <div class="relative" x-data="{ isOpen: false }">
              <button  @click="isOpen = true" class="w-full focus:outline-none">
                <span class="flex p-2 border-r-4 hover:border-blue-500  hover:bg-gray-100 text-gray-500 hover:text-blue-700">
                  <svg class="w-5 h-5 ml-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                  <span class="ml-5">Membership</span>
                <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-0': open, 'rotate-0': !open}" class="inline w-4 h-4 text-left ml-4  transition-transform duration-200 transform md:mt-1"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </span>
                
              </button>
              <ul x-show="isOpen" @click.away="isOpen = false" >
                <li class="bg-gray-100 text-sm">
                  <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500"> 
                 
                       <%= link_to "Members", memberships_path, class: 'ml-14' %>
                    </span> 
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">        
                       <%= link_to "Group Members", member_groups_path, class: 'ml-14' %>
                    </span>
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">        
                       <%= link_to "Department Members", department_members_path, class: 'ml-14' %>
                    </span>             
                </li>
              </ul>
              
            </div>

            <% if Current.user.user_type == 'superadmin' %>

            <div class="relative" x-data="{ isOpen: false }">
              <button  @click="isOpen = true" class="w-full focus:outline-none">
                <span class="flex p-2 border-r-4 hover:border-blue-500  hover:bg-gray-100 text-gray-500 hover:text-blue-700">
                  <svg class="w-5 h-5 ml-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                  <span class="ml-5">Finance</span>
                <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-0': open, 'rotate-0': !open}" class="inline w-4 h-4 text-left ml-4  transition-transform duration-200 transform md:mt-1"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </span>
                
              </button>
              <ul x-show="isOpen" @click.away="isOpen = false" >
                <li class="bg-gray-100 text-sm">
                  <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">        
                       <%= link_to "Tithe", tithes_path, class: 'ml-14' %>
                    </span> 
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">        
                       <%= link_to "Offertory", offertories_path, class: 'ml-14' %>
                    </span> 
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">        
                       <%= link_to "Contribution", contributions_path, class: 'ml-14' %>
                    </span>
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">        
                       <%= link_to "Pledge", pledges_path, class: 'ml-14' %>
                    </span> 
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">        
                       <%= link_to "Expenses", expenses_path, class: 'ml-14' %>
                    </span> 
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500"> 
                       <%= link_to "Income", incomes_path, class: 'ml-14' %>
                    </span>         
                </li>
              </ul>  
            </div>
            <% end %>

            <div class="relative" x-data="{ isOpen: false }">
              <button  @click="isOpen = true" class="w-full focus:outline-none">
                <span class="flex p-2 border-r-4 hover:border-blue-500  hover:bg-gray-100 text-gray-500 hover:text-blue-700">
                  <svg class="w-5 h-5 ml-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                  <span class="ml-5">Settings</span>
                <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-0': open, 'rotate-0': !open}" class="inline w-4 h-4 text-left ml-4  transition-transform duration-200 transform md:mt-1"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </span>
                
              </button>
              <ul x-show="isOpen" @click.away="isOpen = false" >
                <li class="bg-gray-100 text-sm"> 
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">        
                       <%= link_to "Department", departments_path, class: 'ml-14' %>
                    </span>
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">        
                       <%= link_to "Group", groups_path, class: 'ml-14' %>
                    </span>

                    <% if Current.user.user_type == 'superadmin' %>
                    <span class="flex p-2 hover:bg-gray-200 border-r-4 hover:border-blue-500">   <%= link_to "Users", users_path, class: 'ml-14' %>
                    </span>      
                    <% end %>     
                </li>
              </ul>  
            </div>
        <li class="text-gray-500 hover:text-blue-700">
              <span class="flex p-2 border-r-4 hover:border-blue-500 hover:bg-gray-100 cursor-pointer">        
                  <svg class="w-5 h-5 ml-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                       <%= button_to "Log Out", logout_path, method: :delete , class: 'ml-5 bg-transparent cursor-pointer' %>
                    </span>                   
            </li>
          </ul>
     </aside>
     <% end %>
     
     

      